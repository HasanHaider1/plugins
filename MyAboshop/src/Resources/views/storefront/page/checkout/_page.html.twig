{% sw_extends '@Storefront/storefront/page/checkout/_page.html.twig' %}
{% block page_checkout_main %}

    {% for i in config('MyAboshop.config.textarea') %}
        {{ dump(i) }}
    {% endfor %}
    {{ parent() }}
    <div class="row" style="margin-left: 15px">

        {% if config('MyAboshop.config.fieldtype1') == "text" or config('MyAboshop.config.fieldtype1') == "checkbox" %}
        <div class="col-md-4" style="margin-top: 5px">

                <input type="{{ config('MyAboshop.config.fieldtype1') }}">
                <label for="fieldtype1">{{ config('MyAboshop.config.label1') }}</label><br>
        </div>
            {% elseif config('MyAboshop.config.fieldtype1') == "date"%}
                <div class="col-md-4" style="margin: 20px">



                    {% set pickerProperties = {
                        locale: app.request.locale,
                        enableTime: false,

                        mode:"multiple",
                        minDate : context.context.extensions.testContextExtension['key1'],
                        maxDate : context.context.extensions.testContextExtension['key2'],
                        enableTime : false,
                        disable: [context.context.extensions.testContextExtension['key3'], "2021-07-08", "2021-07-17" ],
                        dateFormat: "Y-m-d"

                    } %}
                    <label>
                        <input type="text"
                               name="foo"
                               class="customDate"
                               value="2021-07-13T00:12:15+00:00"
                               data-date-picker
                               data-date-picker-options="{{ pickerProperties|json_encode|escape('html_attr') }}"

                        />

                    </label>

                </div>
            {% else %}
            <div class="col-md-4" style="margin-top: 5px">
                <select name="dropdown" id="dropdown" ></select>
                <label for="fieldtype3">{{ config('MyAboshop.config.label3') }}</label><br>
            </div>
        {% endif %}
        <!--
        <div class="col-md-12" style="margin-top: 5px">

            <p>{{ config('MyAboshop.config.label1') }}</p>
        </div>
        -->
        <!--
        <div class="col-md-12" style="margin-top: 5px">

            <h6>{{ config('MyAboshop.config.label2') }}</h6>

        </div>
        -->
        {% if config('MyAboshop.config.fieldtype2') == "text" or config('MyAboshop.config.fieldtype2') == "date" or config('MyAboshop.config.fieldtype2') == "checkbox" %}
            <div class="col-md-4" style="margin-top: 5px">

                <input type="{{ config('MyAboshop.config.fieldtype2') }}">
                <label for="fieldtype2">{{ config('MyAboshop.config.label2') }}</label><br>
            </div>
        {% else %}
            <div class="col-md-4" style="margin-top: 5px">
                <select name="dropdown" id="dropdown" ></select>
                <label for="fieldtype3">{{ config('MyAboshop.config.label3') }}</label><br>
            </div>
        {% endif %}
        <!--
        <div class="col-md-12" style="margin-top: 5px">

            <h6>{{ config('MyAboshop.config.label3') }}</h6>
        </div>
        -->
        {% if config('MyAboshop.config.fieldtype3') == "text" or config('MyAboshop.config.fieldtype3') == "date" or config('MyAboshop.config.fieldtype3') == "checkbox" %}
            <div class="col-md-4" style="margin-top: 5px">

                <input type="{{ config('MyAboshop.config.fieldtype3') }}">
                <label for="fieldtype3">{{ config('MyAboshop.config.label3') }}</label><br>
            </div>
        {% else %}
            <div class="col-md-4" style="margin-top: 5px">
                <select name="dropdown" id="dropdown" ></select>
                <label for="fieldtype3">{{ config('MyAboshop.config.label3') }}</label><br>
            </div>
        {% endif %}
    </div>
